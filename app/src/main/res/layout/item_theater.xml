<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="@dimen/width_photo_theater"
  app:cardCornerRadius="@dimen/mdLayoutSpacing_sm"
  app:cardElevation="@dimen/cardview_default_elevation"
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  style="@style/MdCardView.Card.Small">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/imgTheater"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      fresco:actualImageScaleType="centerCrop"
      fresco:placeholderImage="@drawable/ic_backdrop_placeholder"
      fresco:placeholderImageScaleType="centerCrop"
      fresco:viewAspectRatio="@dimen/ratio_4_3" />

    <TextView
      android:id="@+id/txtName"
      android:layout_margin="@dimen/mdLayoutSpacing_sm"
      android:ellipsize="end"
      android:gravity="center_vertical"
      android:maxLines="2"
      android:minLines="2"
      android:textColor="@color/mdColor_blueGrey_dark"
      tools:text="@string/txt_tools"
      style="@style/MdText.Body1" />
  </LinearLayout>
</android.support.v7.widget.CardView>

